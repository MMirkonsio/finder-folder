{
  "name": "hellemabot",
  "private": true,
  "version": "0.0.11",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "server": "node server/index.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:start": "electron .",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@xenova/transformers": "^2.17.2",
    "cors": "^2.8.6",
    "dotenv": "^16.6.1",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.8.3",
    "express": "^4.22.1",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^2.2.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.35",
    "prisma": "^5.21.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.hellemabot",
    "productName": "Hellema Holland ChatBot",
    "icon": "public/img/icon.ico",
    "directories": {
      "output": "Releases_Generados/v${version}"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "prisma/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "template.db",
        "to": "dev.db"
      }
    ],
    "asarUnpack": [
      "**/*.node",
      "node_modules/**/*",
      "server/**/*",
      "prisma/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/img/icon.ico",
      "artifactName": "Hellema_Holland_ChatBot_Setup_${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "MMirkonsio",
        "repo": "finder-folder"
      }
    ]
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
